{
    "version": 2,
    "builds": [
        {
        "src": "server.js", 
        "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "server.js",
            "headers": [
                { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate, proxy-revalidate" },
                { "key": "Pragma", "value": "no-cache" },
                { "key": "Expires", "value": "0" }
            ]   
        }
    ]
}